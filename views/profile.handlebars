<div id="heading">
  <h1>{{name}}'s Profile Page</h1>
  <form action="submit_application" method="get">
    <input type="submit" value="Apply for Ordinary User">
  </form>
</div>

<div id="profile">
  <div id="sidebar">
    <img src="{{picture_url}}" height="240" width="240"/>
    <div>{{username}}</div>
    <div>{{email}}</div>
    <div>{{bio}}</div>
  </div>

  <div id="main_info">
    <div id="recent_files">
      <h2>Recent Files</h2>
      <div>Coming Soon</div>
    </div>
    <div id="interests">
      <h2>Interests</h2>
      <div>Coming Soon</div>
    </div>
  </div>
</div>
